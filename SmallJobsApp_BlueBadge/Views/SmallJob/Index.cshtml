@model IEnumerable<SmallJob.Models.JobsListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Current Available Jobs</h2>

<p>
    @Html.ActionLink("Add New Job", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}


    <table class="table table-hover table-striped" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleOfJob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pay)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleOfJob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedUtc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pay)
                </td>
                <td>
                    <button class="btn btn-warning">
                    @Html.ActionLink("Edit", "Edit", new { id=item.JobId })
                    </button>
                    <button class="btn btn-info">
                    @Html.ActionLink("Details", "Details", new { id=item.JobId })
                    </button>
                    <button class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id=item.JobId })
                    </button>

                </td>
            </tr>
        }

    </table>
