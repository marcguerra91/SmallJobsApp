@model SmallJob.Models.AssignedJobsCreate

@{
    ViewBag.Title = "Create";
}
<body class="jobsInProgress">

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Create an assignment</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TitleOfJob,"Assignment", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("JobId", null, "Please Select Job",htmlAttributes: new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.TitleOfJob, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EquipmentAvailable, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.EquipmentAvailable, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EquipmentAvailable, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WorkerId,"Worker Assigned", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("WorkerId", null, "Please Select a Worker", htmlAttributes: new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.WorkerId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <a class="btn btn-default"
    href="@Url.Action("Index", "AssignedJobs")">
    Back to list
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
</body>
}
